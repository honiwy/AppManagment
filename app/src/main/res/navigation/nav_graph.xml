<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/DisplayFragment">

    <fragment
        android:id="@+id/DisplayFragment"
        android:name="com.system.appmanagement.display.DisplayFragment"
        android:label="@string/display_fragment_label"
        tools:layout="@layout/fragment_display">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/BlockFragment" />
    </fragment>
    <fragment
        android:id="@+id/BlockFragment"
        android:name="com.system.appmanagement.block.BlockFragment"
        android:label="@string/block_fragment_label"
        tools:layout="@layout/fragment_block">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/DisplayFragment" />
    </fragment>
</navigation>